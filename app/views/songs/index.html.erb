
<head>
  <link rel="stylesheet" type="text/css" href="/songs_index.css"/>
  <link href="https://fonts.googleapis.com/css?family=Knewave|Shadows+Into+Light" rel="stylesheet">
</head>
<body>
  <h1>All Songs</h1>

  <section class="songs">
    <% @songs.each do |song| %>
    <div class="one_song">
      <img src="/assets/Abbey_Road.jpg" alt="Album Cover from the Beatles Abbey Road" class='image'/>
      <div class='info'>
        <h2><%= song.title %></h2>
        <p><%= song.length %> seconds</p>
        <p>Plays: <%=song.play_count%></p>
      </div>
    </div>
    <%end%>
  </section>
</body>
</html>
